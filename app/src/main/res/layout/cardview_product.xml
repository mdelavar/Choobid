<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:padding="0dp"
        card_view:cardCornerRadius="7dp"

        card_view:cardPreventCornerOverlap="false"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/radius"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingRight="6dp"
                android:textSize="13sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:lines="2"
                android:paddingTop="2dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp"
                android:adjustViewBounds="true"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:src="@drawable/default_pic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/UseRobot"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/userrobot"
                    android:visibility="gone" />


                <ImageView
                    android:id="@+id/BidToGiftBidPercent"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/giftbidpercent"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/SpecialPriceToBidNth"
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:layout_marginRight="5dp"
                    android:src="@drawable/specialpricetobidnth"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/MoneyToWinnerPercent"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"

                    android:src="@drawable/moneytowinnerpercent"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/GiftBidToWinnerPercent"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"

                    android:src="@drawable/giftbidtowinnerpercent"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/AvoidWinnerToBidNth"
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:layout_marginRight="5dp"
                    android:src="@drawable/avoidwinnertobidnth"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/BidToCharityPercent"
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:layout_marginRight="5dp"
                    android:src="@drawable/charitypercent"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/No2DiscountPercent"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"

                    android:src="@drawable/no2discountpercent"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/EntrancePrice"
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:src="@drawable/entranceprice"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/EntranceChoob"
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:src="@drawable/entranceprice"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/maxAccount"
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:src="@drawable/maxaccountno"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/maxOffer"
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:src="@drawable/maxofferperaccount"

                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/timer"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <RelativeLayout
                    android:id="@+id/finishedB"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:id="@+id/bid_f"
                        android:src="@drawable/bid_finished" />

                    <ImageView
                        android:id="@+id/finishedWAvatar"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="36dp"
                        android:layout_marginTop="2dp"
                        android:maxWidth="230dp"

                        android:adjustViewBounds="true"
                        android:src="@drawable/avatar" />

                    <TextView
                        android:id="@+id/finishedWname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="36dp"
                        android:layout_below="@+id/finishedWAvatar"
                        android:gravity="right"
                        android:textColor="@color/black"
                        android:textSize="10sp"

                        />

                </RelativeLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textSize="10sp" />


            <TextView
                android:id="@+id/basePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="13sp"
                android:lines="1"
                android:textColor="@color/orange" />


            <LinearLayout
                android:id="@+id/buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:textColor="@color/darkgray"
                    android:textSize="12sp"

                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/shop_basket" />

            </LinearLayout>

            <ImageView
                android:id="@+id/enter"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:src="@drawable/enter_b" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>