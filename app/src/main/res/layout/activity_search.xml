<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context="com.rayanehsabz.choobid.Activities.SearchActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/searchB"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@color/black"
            android:padding="5dp"
            android:src="@drawable/ic_search_w" />

        <EditText
            android:id="@+id/searchText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="نام محصول را وارد نمایید ..."
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:gravity="right"
            android:maxLines="1"
            android:padding="10dp"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/voice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@color/red"
            android:padding="5dp"
            android:src="@drawable/ic_mic_black_24dp" />
    </LinearLayout>



    <TextView
        android:id="@+id/notFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="محصولی یافت نشد !!"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/storeRcv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"

        >

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
