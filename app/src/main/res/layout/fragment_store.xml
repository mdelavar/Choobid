<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context="com.rayanehsabz.choobid.Activities.MainActivity">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:id="@+id/catRecycler"
    android:paddingTop="5dp"
    android:paddingBottom="6dp"
    android:layout_alignParentTop="true"
    android:background="@color/white"
    android:layout_height="50dp">


</android.support.v7.widget.RecyclerView>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/storeRcv"
                android:layout_below="@+id/catRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp"

                android:background="#e4e5e6"
                >

            </android.support.v7.widget.RecyclerView>

            <ProgressBar
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:id="@+id/progress_view1"
                android:layout_alignParentBottom="true"
                android:indeterminate="true"
                android:visibility="visible" />

        </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:id="@+id/notFound"
        android:visibility="gone"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="محصولی یافت نشد !!"
        />

</RelativeLayout>
