<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/metalic</item>
        <item name="colorPrimaryDark">@color/metalic</item>
        <item name="colorAccent">@color/orange</item>

    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/metalic</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="colorAccent">@color/orange</item>

    </style>


    <style name="AppTheme3" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/metalic</item>
        <item name="colorPrimaryDark">@color/metalic</item>
        <item name="colorAccent">@color/orange</item>

    </style>

    <style name="ButtonOrange" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorButtonNormal">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:radius">15dp</item>

    </style>

    <style name="ButtonRed" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorButtonNormal">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:radius">15dp</item>

    </style>

    <style name="ButtonGreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorButtonNormal">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:radius">15dp</item>

    </style>


</resources>
